-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      // Feb 27 hw2 1.b
      %th{:class => ("hilite" if params[:sortby] == "title")}= link_to 'Movie Title', movies_path(:sortby => "title")
      %th Rating
      %th{:class => ("hilite" if params[:sortby] == "date")}= link_to 'Release Date', movies_path(:sortby=> "date")
      // ----------------
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
